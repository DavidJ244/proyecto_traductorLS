# Configuración Local para Desarrollo
# Copia este archivo como .env.local en la raíz del backend

# Modo desarrollo
ENVIRONMENT=development
DEBUG=True

# Servidor
HOST=0.0.0.0
PORT=8000

# Rutas locales
UPLOAD_DIR=./uploads/videos
RESULTS_DIR=./uploads/results

# Modelos IA (URLs locales o APIs externas)
PATH_DETECTION_MODEL_PATH=./models/path_detection_model
GLOSS_GENERATOR_MODEL_PATH=./models/gloss_generator_model
TEXT_TRANSLATION_MODEL_PATH=./models/text_translation_model

# Configuración de procesamiento
MAX_VIDEO_SIZE_MB=100
MAX_VIDEO_DURATION_SECONDS=15
VIDEO_RESOLUTION_WIDTH=1280
VIDEO_RESOLUTION_HEIGHT=720
VIDEO_FPS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGINS=["http://localhost:8081","http://localhost:3000","*"]

# Modelos (mocks o APIs reales)
USE_MOCK_MODELS=True
MOCK_GLOSS_OUTPUT=CASA TECHO GATO ESTAR-AHÍ
MOCK_TRANSLATION_OUTPUT=El gato está en el techo de la casa
